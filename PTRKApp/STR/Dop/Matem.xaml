<Page x:Class="PTRKApp.STR.Dop.Matem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp.STR.Dop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Matem">

    <Grid>
        <Image Source="/q3.png" Stretch="Fill"/>
        <StackPanel HorizontalAlignment="Left" Margin="100" VerticalAlignment="Center">
            <TextBlock Text ="Сумма оплаты за работу" Margin="5" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="TextKG" />
            <TextBlock Text ="Дней работы" Margin="5" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="TextD" />
            <Button x:Name="Button1" Margin="10" Content="Вычислить" Height="28" Width="106" FontSize="18" Click="Button1_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="100" VerticalAlignment="Center">
            <TextBlock Text ="Оплата за 1 день" Margin="5" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="TextOTV"/>
            <Button x:Name="Button" Margin="0,50,0,0" Content="Назад" Height="28" Width="106" FontSize="18" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
