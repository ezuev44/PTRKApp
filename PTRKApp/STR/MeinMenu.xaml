<Page x:Class="PTRKApp.MeinMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MeinMenu">



    <Grid>
        <Image Source="/q4.png" Stretch="Fill"/>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top" Background="#333" Height="20">
            <Button x:Name="Button1" Padding="10,0" Click="Button1_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Пользователи"/>
                </StackPanel>
            </Button>

            <Button x:Name="Button2" Padding="10,0" Click="Button2_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Команды"/>
                </StackPanel>
            </Button>

            <Button x:Name="Button3" Padding="10,0" Click="Button3_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Заказы"/>
                </StackPanel>
            </Button>

            <Button x:Name="Button4" Padding="10,0" Click="Button4_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Услуги"/>
                </StackPanel>
            </Button>

            <Button x:Name="Button5" Padding="10,0" Click="Button5_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выход"/>
                </StackPanel>
            </Button>

            <Button x:Name="Button7" Padding="10,0" Click="Button7_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Дополнительно"/>
                </StackPanel>
            </Button>
        </StackPanel>

