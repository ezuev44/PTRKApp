<Page x:Class="PTRKApp.STR.DopMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp.STR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DopMenu">

    <Grid>
        <Image Source="/q4.png" Stretch="Fill"/>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top" Background="#333" Height="20">
            <Button x:Name="Button5" Padding="10,0" Click="Button5_Click_1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Резервное копирование БД"/>
                </StackPanel>
            </Button>
            <Button x:Name="Button7" Padding="10,0" Click="Restore_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Восстановление БД"/>
                </StackPanel>
            </Button>
            <Button x:Name="Button6" Padding="10,0" Click="Button5_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Назад"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
