<Page x:Class="PTRKApp.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>

        <Image Source="/q4.png" Stretch="Fill"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label x:Name="Label1" Content="Логин:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="Login" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label2" Content="Пароль:"  FontSize="16" FontWeight="Bold" Width="176"/>

            <PasswordBox x:Name="Password"  FontFamily="Arial" FontSize="16" Width="180" />
            <Button x:Name="Button1" Content="Войти" Margin="10" Foreground="Black" FontFamily="Arial" FontSize="16" FontWeight="Bold" RenderTransformOrigin="-4.264,-0.089" Width="130" Click="Button1_Click"/>
            <Button x:Name="Registarion" Content="Регистрация" Foreground="Black" FontFamily="Arial" FontSize="16" FontWeight="Bold" RenderTransformOrigin="-4.264,-0.089" Width="130" Click="Reg_Click"/>
        </StackPanel>
    </Grid>
</Page>
