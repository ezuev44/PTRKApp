<Page x:Class="PTRKApp.STR.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp.STR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser">

    <Grid>
        <Image Source="/q4.png" Stretch="Fill"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="Label1" Content="Логин:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="Login" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label3" Content="ФИО:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="FIO" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label4" Content="Специальность:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="Speciality" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label5" Content="Email:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="Email" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label6" Content="Дата Рождения:" FontSize="16" FontWeight="Bold" Width="175"/>
            <TextBox x:Name="BirdDate" TextWrapping="Wrap" FontFamily="Arial" FontSize="16" Width="180"/>
            <Label x:Name="Label2" Content="Пароль:"  FontSize="16" FontWeight="Bold" Width="176"/>
            <PasswordBox x:Name="Password"  FontFamily="Arial" FontSize="16" Width="180" />
            <CheckBox Content="Администратор" x:Name="cbAdm" FontSize="16" FontWeight="Bold" Width="175" Margin="10" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Content="Модератор" x:Name="cbMod" FontSize="16" FontWeight="Bold" Width="175" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top" Background="#333" Height="20">
            <Button x:Name="Button6" Padding="10,0" Click="Button6_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Добавить"/>
                </StackPanel>
            </Button>
            <Button x:Name="Button5" Padding="10,0" Click="Button5_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Назад"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Page>
